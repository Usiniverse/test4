{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}  
